bool checkprime(int n)
{
int i;
bool is prime = true;
if (n==0|| n==1)
{
is prime = false;
}
else
{
for(i=2;i<=n\2;++i)
{
if(n% i== 0)
{
is prime = false;
break;
}
}
}
return is prime;
}









